<% layout('layouts/boilerplate') %>

  <form action="/blogposts" method="POST">
    <div>
      <label for="title">Title</label>
      <input type="text" id="title" name="blogpost[title]">
    </div>
    <div>
      <label for="body">Body</label>
      <input type="text" id="body" name="blogpost[body]">
    </div>
    <div>
      <button>Add Post</button>
    </div>
  </form>
  <a href="/blogposts">All Blog Posts</a>
