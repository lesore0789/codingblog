<% layout('layouts/boilerplate') %>

  <div class="row">
    <h1 class="text-center">Edit Post</h1>
    <div class="col-6 offset-3">
      <form action="/blogposts/<%= blogpost._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="blogpost[title]" value="<%= blogpost.title %>" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Add Image</label>
          <input type="file" name="image" id="image" multiple>
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Body</label>
          <textarea class="form-control" type="text" id="body" name="blogpost[body]" required><%= blogpost.body %></textarea>
        </div>
        <div class="mb-3">
          <button class="btn btn-info">Update Post</button>
        </div>
      </form>
      <a href="/blogposts/<%= blogpost._id %>">Back to Post</a>
    </div>
  </div>
